@model Vidly_Most_Final.Models.Customers
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

@if(Model.BirthDate is null)
{
<ul>
    <li>@Model.MembershipType.Name</li>
</ul>
}
else
{
 <ul>
    <li>@Model.MembershipType.Name</li>
     <li>@Model.BirthDate.Value.ToShortDateString()</li>
</ul>
}
